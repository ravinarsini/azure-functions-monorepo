{
  "name": "kbt-platform",
  "private": true,
  "workspaces": [
    "src/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "build:all": "lerna run build --stream",
    "clean": "turbo run clean",
    "dev": "turbo run dev",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "typecheck": "turbo run typecheck"
  },
  "dependencies": {
    "tsup": "latest"
  },
  "devDependencies": {
    "lerna": "^8.1.9",
    "prettier": "^3.2.5",
    "turbo": "^2.0.5"
  },
  "packageManager": "npm@10.5.0",
  "engines": {
    "node": ">=18"
  }
}
